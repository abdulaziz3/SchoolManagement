<h1 align="center"> Marks </h1>
<div class="center">
  <%= will_paginate %>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th data-field="#" data-sortable="true">ID</th>
      <th data-field="#" data-sortable="true">Teacher Name</th>
      <th data-field="#" data-sortable="true">Student Name</th>
      <th data-field="#" data-sortable="true">Subject Name</th>
      <th data-field="#" data-sortable="true">Mark</th>
      <th data-field="#" data-sortable="true">comment</th>
      <th data-field="#" data-sortable="true">|</th>
      <th data-field="#" data-sortable="true" class = "glyphicon-file">Show</th>
      <th data-field="#" data-sortable="true" class = "glyphicon-pencil">Edit</th>
      <th data-field="#" data-sortable="true" class = "glyphicon-trash">Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @marks.each do |mark| %>
        <tr data-link="<%= marks_path(mark) %>">
          <td><%= mark.id %></td>
          <td><%= mark.user.full_name %></td>
          <td><%= mark.student.full_name%></td>
          <td><%= mark.subject.subject_name %></td>
          <td><%= mark.mark %></td>
          <td><%= mark.comment %></td>
          <td>|</td>
          <td><%= link_to 'Show', mark, class: "btn btn-primary btn-xs glyphicon glyphicon-file" %></td>
          <td><%= link_to 'Edit', edit_mark_path(mark),class: "btn btn-primary btn-xs glyphicon glyphicon-pencil" %></td>
          <td><%= link_to 'Delete', mark, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-xs glyphicon glyphicon-trash" %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<div class="center">
  <%= will_paginate %>
</div>

<br>

<%= link_to 'New Mark', new_mark_path %>
