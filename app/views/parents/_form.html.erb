<%= render 'shared/errors', object: @parent %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@parent, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :f_name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :f_name, class: "form-control", placeholder: "First Name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :l_name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :l_name, class: "form-control", placeholder: "First Name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :phone %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :phone, class: "form-control", placeholder: "First Name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :dob %>
      </div>
      <div class="col-sm-8">
        <%= f.date_select :dob, class: "form-control", placeholder: "select", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :job %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :job, class: "form-control", placeholder: "First Name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :work_phone %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :work_phone, class: "form-control", placeholder: "First Name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :email, class: "form-control", placeholder: "First Name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password_confirm %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation", autofocus: true%>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit(@parent.new_record? ? "sign up" : "update account", class: 'btn btn-primary btn-lg btn-block')%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= link_to 'Home Page', root_path, class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
