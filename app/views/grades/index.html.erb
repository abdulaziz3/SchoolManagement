<h1 align = "center"> Grades</h1> </br>
<div align="center">
  <% @grades.each do |grade| %>
  <ul class = "listing">
      <div class="row">
        <div class="well will_categories col-md-4 col-md-offset-4">
          <div class="product-title">
            <strong>
                <%= link_to "#{grade.grade_name}", grade_path(grade) %>
            </strong>
          </li></br>
          <li><small><%= pluralize(grade.subjects.count, "subject") %></small></li>
          <li><small><%= pluralize(grade.students.count, "student") %></small></li>
          </div>
        </div>
      </div>
  </ul>
  <% end %>
</div>
