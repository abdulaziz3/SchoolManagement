<%= render 'shared/errors', object: @course %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@course, :html => {class: "form-horizontal", role: "form"}) do |f| %>

        <div class= "form-group">
          <div class="control-label col-sm-2">
              <%= f.label :course_name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :course_name, class: "form-control", placeholder: "course Name", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :start_date %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :start_date, hide_label: true, class: 'datepicker form-control', placeholder: "Start date of course", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :end_date %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :end_date, hide_label: true, class: 'datepicker form-control', placeholder: "End date of course", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :current_course %>
          </div>
          <div class="col-sm-1">
            <%= f.check_box :current_course, class: 'form-control', autofocus: true %>
          </div>
        </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
              <%= f.submit(@course.new_record? ? "sign up" : "update account", class: 'btn btn-primary btn-lg btn-block')%>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
              <%= link_to 'Home Page', root_path, class: "btn btn-primary btn-lg btn-block" %>
            </div>
          </div>

        <% end %>
    </div>
</div>
