<div class="row">
  <div class="well col-xs-10 col-xs-offset-1">
    <div class="caption">
      <h3 class = "center"><%= @course.course_name %></h3>
      <p>Start date: <%= @course.start_date %> </p>
      <p>End date  : <%= @course.end_date %></p>
      <p>Current Course: <%= @course.current_course %></p>
    </div>
    <%= link_to 'Viewing', courses_path, class: "btn btn-md btn-success glyphicon glyphicon-file" %>
    <%= link_to 'Editing', edit_course_path(@course), class: "btn btn-md btn-primary glyphicon glyphicon-pencil" %>
		<%= link_to 'Delete', course_path(@course), method: :delete, data: {confirm: "Are you sure ? "},
						class: "btn btn-md btn-danger glyphicon glyphicon-trash"%>
  </div>
  <div class="col-lg-offset-1 col-lg-6">
    <%= link_to "new lesson", new_lesson_path, class: "btn btn-secondary btn-lg " %>
  </div>
</div>
