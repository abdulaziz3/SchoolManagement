<%= render 'shared/errors', object: @student_parent %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@student_parent, :html => {class: "form-horizontal", role: "form"}) do |f| %>

        <div class= "form-group">
            <div class="control-label col-sm-2">
                <%= f.label :first_name %>
            </div>
            <div class="col-sm-8">
              <%= f.collection_select :user_id, User.where(:role_id => @user_role_parent), :id, :full_name, {prompt: "Select parent's name"}, class: "form-control chosen-select" %>
            </div>
        </div>

        <div class= "form-group">
            <div class="control-label col-sm-2">
                <%= f.label :first_name %>
            </div>
            <div class="col-sm-8">
              <%= f.collection_select :student_id, Student.all, :id, :full_name, {prompt: "Select student's name"}, class: "form-control chosen-select" %>
            </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-2">
               <%= f.submit class: 'btn btn-primary btn-lg '%>
      	  </div>
          <div class="col-xs-4 col-xs-offset-2">
            <%= link_to 'Go Back ', root_path, class: "btn btn-danger btn-lg pull-right"%>
          </div>
       </div>

        <% end %>
    </div>
</div>
