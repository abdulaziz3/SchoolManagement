<div class="row">
  <h3 class = "center">Student's parent</h3>
  <div class="well col-xs-10 col-xs-offset-1 top_margin">
    <div class="caption">
      <h3>Parent name: <%= @student_parent.user.full_name %> </h3>
      <h3>Student name: <%= @student_parent.student.full_name %></h3>
    </div>
    <div class="top_margin">
    <%= link_to 'Viewing', student_parents_path, class: "btn btn-md btn-success glyphicon glyphicon-file" %>
    <%= link_to 'Editing', edit_student_parent_path(@student_parent), class: "btn btn-md btn-primary glyphicon glyphicon-pencil" %>
		<%= link_to 'Delete', student_parent_path(@student_parent), method: :delete, data: {confirm: "Are you sure ? "},
						class: "btn btn-md btn-danger glyphicon glyphicon-trash"%>
    </div>
  </div>
</div>
