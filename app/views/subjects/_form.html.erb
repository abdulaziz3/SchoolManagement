<%= render 'shared/errors', object: @subject %>

<div class='row'>
  <div class='col-xs-12'>
    <%=form_for(@subject, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :subject_name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :subject_name, class: "form-control", placeholder: "subject name", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :subject_code %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :subject_code, class: "form-control", placeholder: "subject code", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :grade_id %>
      </div>
      <div class="col-sm-8">
        <%= f.collection_select :grade_id, Grade.all, :id, :grade_name, {prompt: 'Select a grade'},{class: 'form-control'} %>
      </div>
    </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :user_id %>
        </div>
          <div class="col-sm-8">
            <%= f.collection_select :user_id, User.all, :id, :full_name, {include_blank: "Select Teacher"},{class: 'form-control'}%>
          </div>
      </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-2">
           <%= f.submit class: 'btn btn-primary btn-lg '%>
  	  </div>
      <div class="col-xs-4 col-xs-offset-2">
        <%= link_to 'Go Back ', root_path, class: "btn btn-danger btn-lg pull-right"%>
      </div>
   </div>
   <%end%>
  </div>
</div>
