<table class="table table-hover">
  <thead>
    <tr>
      <th data-field="#" data-sortable="true">ID</th>
      <th data-field="#" data-sortable="true">|</th>
      <th data-field="#" data-sortable="true">Lesson name</th>
      <th data-field="#" data-sortable="true">Lesson note</th>
      <th data-field="#" data-sortable="true">lesson File</th>
      <th data-field="#" data-sortable="true">subject</th>
      <th data-field="#" data-sortable="true">|</th>
      <th data-field="#" data-sortable="true">View</th>
      <th data-field="#" data-sortable="true">Edit</th>
      <th data-field="#" data-sortable="true">Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
    <tr data-link="<%= lessons_path(lesson) %>">
      <td><%= lesson.id %></td>
      <td>|</td>
      <td><%= lesson.lesson_name %></td>
      <td><%= truncate lesson.lesson_note, length: 15 %></td>
      <td><%= link_to lesson.file_name, lesson.lesson_file_url %></td>
      <td><%= lesson.subject.subject_name %></td>
      <td>|</td>
      <td><%= link_to 'view', lesson, class: "btn btn-primary btn-xs glyphicon glyphicon-file" %></td>
      <td><%= link_to 'Edit', edit_lesson_path(lesson), class: "btn btn-primary btn-xs glyphicon glyphicon-pencil" %></td>
      <td><%= link_to 'Delete', lesson, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-primary btn-xs glyphicon glyphicon-trash" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Home', root_path, class: "btn btn-primary btn-md btn-block glyphicon glyphicon-home" %>
