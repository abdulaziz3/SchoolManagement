<div class="row">
  <div class="well col-xs-10 col-xs-offset-1">
    <div class="caption">
      <h3 class = "center"><%= @lesson.lesson_name %></h3>
      <h4>Note:&nbsp;<%= @lesson.lesson_note %></h4><br>
      <h4>Subject:&nbsp;<%= link_to "#{@lesson.subject.subject_name}", subject_path(@lesson.subject)  %></h4><br>
      <h4>File :<%= link_to @lesson.file_name, @lesson.lesson_file_url, id: "link_file"%></h4><br>
    </div>
    <%= link_to 'Lessons', lessons_path, class: "btn btn-md btn-success glyphicon glyphicon-file" %>
    <%= link_to 'Editing', edit_lesson_path(@lesson), class: "btn btn-md btn-primary glyphicon glyphicon-pencil" %>
		<%= link_to 'Delete', lesson_path(@lesson), method: :delete, data: {confirm: "Are you sure ? "},
						class: "btn btn-md btn-danger glyphicon glyphicon-trash"%>
  </div>
</div>
