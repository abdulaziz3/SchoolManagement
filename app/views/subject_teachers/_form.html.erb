<%= render 'shared/errors', object: @subject_teacher %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@subject_teacher, :html =>{class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :subject_id %>
      </div>
      <div class="col-sm-8">
        <%= f.collection_select :subject_id, Subject.all, :id, :subject_code, prompt: true %>
      </div>
    </div>
    <div class="control-group">
      <div class="control-label col-sm-2">
        <%=  f.label :user_id %>
      </div>
        <div class="col-sm-8">
          <%= f.collection_select :user_id, User.all, :id, :l_name, prompt: true %>
      </div>
    </div>
   <div class="form-group">
  <div class="col-sm-offset-2 col-sm-2">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
  <div class="col-xs-4 col-xs-offset-2">
    <%= link_to 'Go Back', root_path, class: 'btn btn-danger btn-lg pull-right' %>
  </div>
</div>
<% end %>
</div>
</div>
