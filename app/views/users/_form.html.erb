<%= render 'shared/errors', object: @user %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

        <div class= "form-group">
            <div class="control-label col-sm-2">
                <%= f.label :f_name %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :f_name, class: "form-control", placeholder: "First Name", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :l_name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :l_name, class: "form-control", placeholder: "Last Name", autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :dob %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :dob, class: "form-control", placeholder: "Date of Birth", autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :gender %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :gender, class: "form-control", placeholder: "Gender", autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :nationality %>
          </div>
          <div class="col-sm-8">
            <%= f.country_select :nationality, ["Ireland","Saudi Arabia", "GB", "US"], {}, { :class => "form-control" }  %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :national_id %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :national_id, class: "form-control", placeholder: "National id", autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :password %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :password_confirmation %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation", autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :role %>
          </div>
            <div class="form-group">
            <div class="col-sm-8">
            <select class="selectpicker form-control">
              <option>Choose a Role</option>
              <option>Admin</option>
              <option>Manager</option>
              <option>Teacher</option>
              <option>psychologiest</option>
            </select>
            </div>
            </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-2">
            <%= f.submit(@user.new_record? ? "sign up" : "update account", class: 'btn btn-primary btn-lg')%>
          </div>
          <div class="col-sm-offset-4 col-sm-2">
            <%= link_to 'back', @user, class: 'btn btn-primary btn-lg pull-right' %>
          </div>
        </div>
        <% end %>
    </div>
</div>
